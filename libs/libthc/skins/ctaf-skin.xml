<thc>
  <slider name="crossfader-full" type="all" orientation="horizontal">
    <images name="all" count="127" path="mixxx/machin%i.png"/>
  </slider>
  
  <slider name="crossfader-2state" type="foreground" orientation="horizontal">
    <image name="background" patch="mixxx/crossfader-back.png"/>
    <image name="foreground" patch="mixxx/crossfader-fore.png"/>
  </slider>

  <slider name="crossfader-handle" type="handle" orientation="horizontal">
    <image name="background" patch="mixxx/crossfader-back.png"/>
    <image name="handle" patch="mixxx/crossfader-handle.png"/>
  </slider>

  <slider name="crossfader-vector" type="vector" orientation="horizontal">
  	<color name="background" value="0xFFFF00"/>  
  	<color name="foreground" value="0xFFFF00"/>  
  	<color name="handle" value="0xFFFF00"/>  
  </slider>
  
  <button name="button">
    <image name="background" patch="mixxx/crossfader-back.png"/>
    <image name="foreground" patch="mixxx/crossfader-fore.png"/>
  </button>
</thc>
